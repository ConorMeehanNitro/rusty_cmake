{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake -Bbuild -GNinja ."
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build build"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./build/src/rusty_cmake",
            "dependsOn": "build"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "Remove-Item -LiteralPath 'build' -Force -Recurse -ErrorAction Ignore"
        },
    ]
}
